<style>
  .toggle-button {
    position: fixed;
    top: 10px;
    z-index: 999;
  }

  #wrapper {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
  }

  #wrapper-toggled {
    padding-left: 250px;
  }

  #sidebar-wrapper {
    z-index: 1000;
    position: fixed;
    left: 250px;
    width: 0;
    height: 100%;
    margin-left: -250px;
    overflow-y: auto;
    overflow-x: hidden;
    background: #ffae19;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
  }

  #wrapper.toggled #sidebar-wrapper {
    width: 100%;
    position: absolute;
    padding: 15px;
  }

  #page-content-wrapper {
    width: 100%;
    position: absolute;
    padding: 15px;
  }

  #wrapper.toggled #page-content-wrapper {
    position: absolute;
    margin-right: -250px;
  }

  .sidebar-nav {
    position: absolute;
    top: 0;
    width: 250px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .sidebar-nav li {
    text-indent: 20px;
    line-height: 40px;
  }

  .sidebar-nav li a {
    display: block;
    text-decoration: none;
    color: whitesmoke;
  }

  .sidebar-nav li a:hover {
    text-decoration: none;
    color: #fff;
    background: rgba(225, 225, 225, 0.2)
  }

  .sidebar-nav li a:active,
  .sidebar-nav li a:focus {
    text-decoration: : none;
  }

  .sidebar-nav > .sidebar-brand {
    height: 65px;
    font-size: 18px;
    line-height: 60px;
  }

  .sidebar-nav > .sidebar-brand a {
    color: #000;
  }

  .sidebar-nav > .sidebar-brand a:hover {
  color: #fff;
  background: none;
}

#menu-toggle {
  color: #333;
  background-color: #ffae19;
  border: none;
  border-radius: 0;
  padding: 6px 8px;
}

#menu-toggle:hover { 
  background-color: #ffc65d;
}

#chevron-right {
  transform: rotate(180deg);
  transition: all 0.5s;
}
  
#wrapper.toggled #chevron-right {
  transform: rotate(0deg);
}

#chevron-left {
  display: none; /* Hide the left chevron by default */
}

#wrapper.toggled #chevron-left {
  display: inline-block; /* Show the left chevron when toggled */
}

/* Scrollbar */
#sidebar-wrapper::-webkit-scrollbar {
  width: 12px;
}
 
#sidebar-wrapper::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 3px rgba(0,0,0,0.5); 
}

@media(min-width:768px) {
  #wrapper {
    padding-left: 250px;
  }

  #wrapper.toggled {
    padding-left: 0;
  }

  #sidebar-wrapper {
    width: 250px;
  }

  #wrapper.toggled #sidebar-wrapper {
    width: 0;
  }

  #page-content-wrapper {
    padding: 20px;
    position: relative;
  }

  #wrapper.toggled #page-content-wrapper {
    position: relative;
    margin-right: 0;
  }

  #chevron-right {
    transform: rotate(0deg); /* Chevron pointing left by default */
  }

  #wrapper.toggled #chevron-right {
    transform: rotate(180deg); /* Chevron pointing right when toggled */
  }
}
</style>

<script>
   const menuToggle = document.getElementById('menu-toggle');
   const wrapper = document.getElementById('wrapper');
   const chevronRight = document.getElementById('chevron-right');
   const chevronLeft = document.getElementById('chevron-left');

   menuToggle.addEventListener('click', (e) => {
    e.preventDefault();
    wrapper.classList.toggle('toggled');

    // Toggle chevron rotation
    if (wrapper.classList.contains('toggled')) {
      chevronRight.style.transform = 'rotate(0deg)';
      chevronLeft.style.display = 'inline-block';
    } else {
      chevronRight.style.transform = 'rotate(180deg)';
      chevronLeft.style.display = 'none';
    }
   })
</script>
