<header class="header">
  <div class="logo">
    <span class="logo-placeholder"><a href="#">Company logo</a></span>
  </div>
  <nav class="navigation">
    <ul>
      <li><a href="#" class="nav-item">Item 1</a></li>
      <li><a href="#" class="nav-item">Item 2</a></li>
      <li><a href="#" class="nav-item">Item 3</a></li>
      <li><a href="#" class="nav-item">Item 4</a></li>
      <li><a href="#" class="nav-item">Item 5</a></li>
    </ul>
  </nav>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: #2c2c2c;
    color: white;
  }

  .logo {
    flex: 0 0 auto;
  }

  .logo-placeholder {
    /* Replace this with your actual logo */
    background-color: #444;
    padding: 0.5rem;
    border-radius: 50%;
  }

  .navigation {
    flex: 1 1 auto;
  }

  .navigation ul {
    display: flex;
    justify-content: center;
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .navigation li {
    margin: 0 1rem;
  }

  .nav-item {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid transparent;
    border-radius: 4px;
    transition: border-color 0.3s ease;
  }

  .nav-item:hover {
    border-color: white;
  }
</style>
